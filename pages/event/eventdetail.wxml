<!-- 内容部分 -->
<view class="view-content">
  <view class="content-theme">
    <view class="theme-days">
      <image class="theme-days-img" src="/images/icon/yuan45.png"></image>
      <text class="theme-days-day">{{day}}<text class="theme-days-day2" decode="true">&ensp;{{dayTxt}}</text></text>
    </view>
    <view class="theme-riqi">
      <image class="riqi-back" src="/images/icon/Label.png"></image>
      <text class="riqi-info">{{gongli}}<text class="riqi-nongli">\n（{{nongli}}）</text></text>
    </view>
    <view class="theme-img">
      <image class="theme-imgss" src="/images/icon/undraw_Booked.png"></image>
    </view>
  </view>

  <view class="content-info" style="min-height: {{contentInfoMH}}rpx;">
    <view class="content-title">
      <text class="c-title">{{eventTitle}}</text>
      <text class="c-theme">{{theme}}</text>
    </view>
    <view class="c-detailinfo">
    <text class="txt-detailinfo">{{describe}}</text>
    </view>
    <view class="c-bottom" wx:if="{{fromshare!=''}}"><text>--来自{{fromshare}}的分享</text></view>    
  </view>
  
  <view class="content-login" style="margin-top: {{btnShareMT}}rpx;">
<button class="content-login-btn" open-type="share"><image class="content-login-img" src="../../images/register/wx-1.png"></image><text class="content-login-text">分享给好友</text></button>
</view>
</view>

<!-- 内容部分 -->