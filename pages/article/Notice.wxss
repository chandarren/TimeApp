page{
  background-color: #F8F8FF;
  overflow: hidden;
  position: fixed;  
  margin: 0px;
  font-size: 14px;
  font-weight: 400;
  background-size: 100% 100%;
  font-family: sans-serif;
}
.view-top{  
  display: flex;  
  justify-content: center;
  overflow: hidden;
  position: absolute;
  width: 100%;
  top: 0;
  background:url("https://shikeji.oss-cn-huhehaote.aliyuncs.com/d8c97d7094bc28aa9a180509e559f33.png");
  background-size: 100% 100%;
}

.image-return{
  width: 34px;
  height: 34px;
  margin: 10px 10px;
}

.text-title{
  margin: 10px 10px;
  font-size: 30rpx;  
  color: #FFF;
}

.view-container{
  display: flex;
  margin: 60rpx 0rpx;
  border-style: solid;  
  box-shadow:0 0 10px rgba(51, 50, 50, 0.521);
  border-width: 0rpx;
  border-radius: 5px;
  flex-direction: column;   
  padding: 50rpx 0;   
  background-color: white;    
}

.content-ask{
  margin-top: 50px;
  margin-left: 20px;
}
.content-info{
  margin-top: 20px;
  line-height: 2;
  margin-left: 20px;
  margin-right: 20px;
}
.content-foot{
  margin-top: 30px;
  line-height: 2;
  margin-right: 20px;
  text-align: right;
}
