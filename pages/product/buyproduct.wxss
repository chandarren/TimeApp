  padding-left: 12px;
  /*padding-top: 12px;*/
  padding-right: 12px;
  position: relative;
  /*margin: 120rpx auto 0 35rpx;*/
  background:rgba(255,255,255,1);
  border:2px solid rgba(238,238,238,1);
  border-radius: 10px;
opacity:1;
display: flex;
justify-content: center;
