}

.view-product-description::after{
  content: '';
  width: 10px;
  height: 10px;
  position: absolute;
  top: -15rpx;
  left: 48%;
  transform: rotate(45deg);
  background:rgba(255,255,255,1);
  border:2px solid rgba(238,238,238,1);
  border-style: solid none none solid ;
}

