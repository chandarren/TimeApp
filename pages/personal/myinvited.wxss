page{
  position: absolute;
  width: 100%;
  height: 100vh;
  background-color: #ED4646FF;
  font-size: 14px;
  font-family: sans-serif;
  font-weight: 400;
}
.view-head-background-img{
  overflow: hidden;
  position: fixed;
  width: 100%;
  height: 200px;
  top: 0;
  background:url("https://shikeji.oss-cn-huhehaote.aliyuncs.com/d8c97d7094bc28aa9a180509e559f33.png");
  background-size: 100% 100%;
  }
  
  .view-head{
    line-height: 50px;
    margin-left: 10px;
    font-size: 22px;
    font-weight: 500;
    color: #FFFFFF;
    text-align: center;
  }

  .view-invited{
    position: fixed;
    border: 1px solid red;
    background-color: #FFFFFF;
    position: absolute;
    width: 96%;
    height: 90%;
    margin:50px 2% 2% 2%;
    border-radius:2%;
    overflow: scroll;
  }
  
  .invited-list{
    width: 80%;
    height: 50px;
    padding-top: 5px;
    margin: 20px auto;
    border-bottom: 1px solid #ddd8d8;
  }

  .photo{
    width: 36px;
    height: 36px;
    float: left;
    border-radius: 5px;
  }

  .nickname{
    font-size: 18px;
    float: right;
    margin-top: 5px;
    width: 70%;
    text-align: center;
    height: 50px;
  }

  .viewno-invited{
    position: fixed;
    border: 1px solid red;
    background-color: #FFFFFF;
    position: absolute;
    width: 96%;
    height: 90%;
    margin:50px 2% 2% 2%;
    border-radius:2%;
    overflow: scroll;
    text-align: center;
    vertical-align: middle;
    font-size: 16px;
  }
  .tishi{
    position: fixed;
    left: 0;
    right: 0;
    top: 50%;
  }