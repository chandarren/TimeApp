page{
  background-color: #F7F7F7;
  height:100vh;
  font-size: 14px;
  font-family: sans-serif;
  font-weight: 300;
}
.view-head-background-img{
  overflow: hidden;
  position: fixed;
  width: 100%;
  height: 200px;
  background:url("https://shikeji.oss-cn-huhehaote.aliyuncs.com/d8c97d7094bc28aa9a180509e559f33.png");
  background-size: 100% 100%;
  }
  
  .view-head{
  margin-top: 56px;
  margin-left: 10px;
  }
  
  .view-avator{
  width:60px;
  height:60px;
  background:rgba(0,0,0,0);
  border:4px solid rgba(255,255,255,1);
  border-radius:50%;
  opacity:1;
  }
  
  .img-avator{
  width: 60px;
  height: 60px;
  border-radius:50%;
  }
  
  .view-head-middle{
    display: flex;
    position: fixed;
    margin-left: 100px;
    margin-top: 62px;
    }
    
    .view-head-user-name{
    display: flex;
    flex-direction: row;
    align-items: center;
    } 
    .txt-user-name{
    font-size:1.6em;
    font-weight:bold;
    color:rgba(255,255,255,1);
    opacity:1;
    } 
    .view-product{
      background-color: #FFB90F;
      border-radius: 3px;
      width: 50px;
      height: 20px;
      margin-left: 10px;
      font-size: 0.8em;
      color: rgba(255,255,255,1);
      text-align: center;
      line-height: 20px;
    }

    .txt-time-limit{
      position: fixed;
      width: 200px;
      font-size:0.8em;
      font-weight:400;
      color:rgba(255,255,255,1);
      opacity:1;
      margin-top: 36px;
      margin-left: 5px;
      letter-spacing:1px
    }

  .view-content{
    position: fixed;
    width: 96%;
    height: 510px;
    margin:150px auto;
    border-radius:2%;
    background-color: #F7F7F7;
  }
  .content-rights{
    position: fixed;
    background-color: #FFF;
    width: 100%;
    height:200px;
    border-radius: 10px;
  }
  .rights-item{
    position: fixed;
    align-items: center;
    width: 100%;
    height: 140px;
    margin: 10px auto;
    float: left;
  }
  .rights-item-view{
    width: 60px;
    height: 60px;
    border: 1px solid #fd8403;
    border-radius: 100%;
    margin-left: 10px;
    margin-top: 20px;
    float: left;
  }
  .rights-item-img{
    position: absolute;
    display: block;
    width: 18px;
    height: 18px;
    margin-top:21px;
    margin-left: 21px;
  }
  .rights-item-txt{
    position: absolute;
    font-size: 0.9em;
    margin-top: 70px;
    margin-left: 5px;
  }

  .content-tishi{
    position: fixed;
    background-color: #FFF;
    width: 100%;
    height:300px;
    margin-top: 210px;
    border-radius: 10px;
  }
  .title{
    font-size: 1.2em;
    font-weight: bolder;
    margin-top: 10px;
    margin-left: 10px;
    line-height: 1.5;
  }
  .title-img{
    position: absolute;
    width: 24px;
    height: 24px;
  }
  .title-text{
     margin-left: 30px;
     background-image:-webkit-linear-gradient(bottom,rgb(255, 208, 0),#fd8403,yellow); 
     -webkit-background-clip:text; 
     -webkit-text-fill-color:transparent; 
  }
  .wxtishi{
    background-image:-webkit-linear-gradient(bottom,red,#fd8403,rgb(247, 117, 10)); 
  }
  .info{
    margin-top: 10px;
    margin-left: 20px;
    line-height:2;
    font-size: 0.9em;
  }