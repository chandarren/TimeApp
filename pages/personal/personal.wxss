/* 遮罩层，用于新手指引提示样式 */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.5;
  -moz-opacity: 0.7;
  opacity: 0.9;
  filter: alpha(opacity=100);
  color: black;
  font-weight: bolder;
}
.mask-ok{
  position: fixed;
  height: 25px;
  width: 100px;
  margin:20px 10px;
}
.mask-ok-two{
