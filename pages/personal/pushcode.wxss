page{
  position: absolute;
  width: 100%;
  height: 720px;
  background-color: #ED4646FF;
}
.view-head-background-img{
  overflow: hidden;
  position: absolute;
  width: 100%;
  height: 200px;
  top: 0;
  background:url("https://shikeji.oss-cn-huhehaote.aliyuncs.com/d8c97d7094bc28aa9a180509e559f33.png");
  background-size: 100% 100%;
  }
  
  .view-head{
  margin-top: 56px;
  margin-left: 10px;
  }

  .view-invited{
    position: absolute;
    width: 96%;
    height: 600px;
    margin:50px 2%;
    border-radius:2%;
  }
  .view-invited-top{
    border:1px solid #ED4646FF;
    background-color: #FFFFFF;
    width: 96%;
    height: 300px;
    margin:10px auto;
    border-radius:10px;
    box-shadow: 0px -3px 3px 3px #F57373FF;
  }

  .invited-remark{
    position: absolute;
    font-size: 18px;
    font-family: sans-serif;
    font-weight: 400;
    color: #6E6E6E;
    text-align: center;
    margin:20px auto;
    left: 0;
    right: 0;
  }
  .invited-remark-num{
    color:  #F57373FF;
    font-weight: bolder;
    text-decoration: underline #F57373FF;
  }

  .invited-code{
    position: absolute;
    font-size: 20px;
    font-family: sans-serif;
    font-weight: 400;
    color: #d9d9d9;
    text-align: center;
    margin:60px auto;
    left: 0;
    right: 0;
  }
  .invited-code-info{
    position: absolute;
    margin:120px auto;
    left: 0;
    right: 0;
    display:flex;
    justify-content:center;
  }
  .code-info{
    border: 1px solid #EE5C42;
    border-radius: 5px;
    background-color: #FCFCFC;
    width: 30px;
    height: 33px;
    font-size: 24px;
    font-family: sans-serif;
    font-weight: bolder;
    color: #F57373FF;
    float: left;
    margin-left: 5px;
    text-align: center;
  }
  .invited-btn{
    opacity:1;
    position: absolute;
    width:50%;
    height:44px;
    margin:200PX auto;
    left: 0;
    right: 0;
    background:linear-gradient(274deg,rgba(245,115,115,1) 0%,rgba(237,70,70,1) 100%);
    border-radius:40px;
    color: #FFFFFF;
  }
  .has-invited{
    position: absolute;
    font-size: 16px;
    font-family: sans-serif;
    font-weight: 400;
    color: #d9d9d9;
    text-align: center;
    margin:270px auto;
    left: 0;
    right: 0;
  }

  .view-invited-info{
    border:1px solid  #F57373FF;
    background-color: #FFFFFF;
    width: 96%;
    height: 300px;
    margin:-12px auto;
    border-radius:10px;
    color: #6E6E6E;
    font-size: 16px;
    padding-top: 5px;
  }
  .invited-guize{
    border-radius: 30px;
    background-color: #FEDEDE;
    width:40%;
    height:36px;
    text-align: center;
    margin: 20px auto;
    line-height: 36px;
    color: rgb(10, 10, 10);
  }

  .invited-guize-txt{
    width: 100%;
    height: 70px;
    font-size: 14px;
    line-height: 2;
    margin-top: 25px;
  }
  .zuize-index{
    height: auto;
    width:20%;
    text-align: center;
    float: left;
  }
  .guize-content{
    height: auto;
    width:75%;
    float: right;
    margin-right: 5%;
  }